<Window x:Class="SettingsManager.Views.NewConfigurationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Configuration" Background="{StaticResource WindowBackgroundBrush}" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="30">
            <Label Content="Configration Name:" VerticalAlignment="Center" Margin="5" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="200" Margin="5" />
            <Button Height="30" Margin="5" VerticalAlignment="Center" Width="75" Content="Create" Command="{Binding CreateConfigurationCommand}" />
        </StackPanel>
    </Grid>
</Window>
